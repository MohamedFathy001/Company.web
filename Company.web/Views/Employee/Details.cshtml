@model EmployeeDetailsViewModel

<h1>Employee Details</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Employee.Id" value="@Model.Employee.Id" />

    <div>
        <label class="col-form-label" asp-for="Employee.Name"></label>
        <input type="text" asp-for="Employee.Name" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.Age"></label>
        <input type="number" asp-for="Employee.Age" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.Address"></label>
        <input type="text" asp-for="Employee.Address" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.Salary"></label>
        <input type="number" asp-for="Employee.Salary" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.HiringDate"></label>
        <input type="date" asp-for="Employee.HiringDate" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.Email"></label>
        <input type="email" asp-for="Employee.Email" class="form-control" />
    </div>

    <div>
        <label class="col-form-label" asp-for="Employee.PhoneNumber"></label>
        <input type="text" asp-for="Employee.PhoneNumber" class="form-control" />
    </div>

    <div>
        <label class="col-form-label">Department</label>
        <select asp-for="Employee.DepartmentId" class="form-control">
            <option value="">-- Select Department --</option>
            @foreach (var department in Model.Departments)
            {
                <option value="@department.Id">
                    @department.Name
                </option>
            }
        </select>
    </div>


    <div>
        <label class="col-form-label" asp-for="Employee.Image">Upload Image</label>
        <input type="file" asp-for="Employee.Image" class="form-control" />
        @if (Model.Employee.ImageURL != null)
        {
            <img src="~/Files/Images/@Model.Employee.ImageURL" height="100" width="100" />
        }
    </div> 

    <input type="submit" value="Update" class="btn btn-primary" />
    <a class="btn btn-secondary" asp-action="Index">Back to list</a>
</form>
