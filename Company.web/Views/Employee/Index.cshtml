@model IEnumerable<EmployeeDTO>

	<h1>All employees</h1>
	<br />
	<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary"> Create New Employee</a>

<div>
	<form class="row col-8 offset-2" asp-action="Index">
		<div class=" col-8">
			<input type="text" class="form-control" name="searchInp" placeholder="search by name"/>
		</div>
		<div class="col-4">
			<input type="submit" value="search" class="btn btn-success"/>
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Age</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Department</th>
                <th>HireDate</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/Files/Images/@item.ImageURL" height="40" width="40" />
                    </td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>
                    <td>@item.Salary</td>
                    <th>@item.Email</th>
                    <th>@item.PhoneNumber</th>
                    <td>@item.Department?.Name</td>
                    <th>@item.HiringDate</th>
                    @await Html.PartialAsync("_ButtonsPartial", item.Id, new ViewDataDictionary(ViewData) { { "Controller", "Employee" } })
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Employees</h3>
    </div>
}