@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<a asp-controller="Role" asp-action="Create" class="btn btn-primary"> Create New Role</a>
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-controller="Role" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id"  onsubmit="return confirm('Are you sure you want to delete this role?');">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no departments</h3>
    </div>
}


