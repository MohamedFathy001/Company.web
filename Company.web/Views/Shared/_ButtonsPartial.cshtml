@model int

@{
    string controller = ViewData["Controller"]?.ToString() ?? "Department"; // Default to Department if not provided
}

<td>
    <a asp-action="Details" asp-controller="@controller" asp-route-id="@Model" class="btn btn-warning">
        <i class="fas fa-eye"></i> Details
    </a>
</td>
<td>
    <a asp-action="Delete" asp-controller="@controller" asp-route-id="@Model" class="btn btn-danger">
        <i class="fas fa-trash"></i> Delete
    </a>
</td>
